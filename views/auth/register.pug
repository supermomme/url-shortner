extends ../app

block body
  .wrapper
    .container
      h1 Register
      form(role='form', action='/register', method='post', style='max-width: 300px;')
        .form-group
          label(for='inputUsername') Username
          input#inputUsername.form-control(type='text', name='username', placeholder='Enter Username')
        .form-group
          label(for='inputPassword') Password
          input#inputPassword.form-control(type='password', name='password', placeholder='Enter Password')
        button.btn.btn-primary(type='submit', style='margin-right:5px;') Register
        a.btn.btn-danger(role='button', href="/") Cancel

