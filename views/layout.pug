extends app

block body
  nav.navbar.navbar-expand-lg.navbar-dark.bg-dark
    .container
      a.navbar-brand(href='#') URL Shortner
      button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbar', aria-controls='navbar', aria-expanded='false', aria-label='Toggle navigation')
        span.navbar-toggler-icon
      #navbar.collapse.navbar-collapse
        ul.navbar-nav.mr-auto
          li.nav-item.dropdown
            a#dropdown01.nav-link.dropdown-toggle(href='#', role='button', data-toggle='dropdown', aria-haspopup='true', aria-expanded='false')
              | URL
            .dropdown-menu(aria-labelledby='dropdown01')
              a.dropdown-item(href='/admin/') List
              a.dropdown-item(href='/admin/create') Erstellen
          if currentUser.isAdmin
            li.nav-item.dropdown
              a#dropdown02.nav-link.dropdown-toggle(href='#', role='button', data-toggle='dropdown', aria-haspopup='true', aria-expanded='false')
                | User
              .dropdown-menu(aria-labelledby='dropdown02')
                a.dropdown-item(href='/admin/users') List
                a.dropdown-item(href='/admin/users/create') Erstellen


        ul.navbar-nav.my-2.my-md-0
          li.nav-item.dropdown
            a#dropdown03.nav-link.dropdown-toggle(href='#', role='button', data-toggle='dropdown', aria-haspopup='true', aria-expanded='false')
              | Hallo #{currentUser.username}
            .dropdown-menu(aria-labelledby='dropdown03')
              a.dropdown-item(href='/admin/settings/password') Change Password
          li.nav-item
            a.nav-link(href="/admin/logout") Logout

  .wrapper
    block content