extends ../layout

block content
	h1 Passwort ändern
	br
	form(role='form', action='/admin/settings/password', method='post', style='max-width: 500px;')
		.form-group.row
			label.col-sm-2.col-form-label(for='inputOldPassword') Altes Passwort
			.col-sm-10
				input#inputUsername.form-control(type='password', name="oldPassword", placeholder='Altes Passwort')
		.form-group.row
			label.col-sm-2.col-form-label(for='inputNewPassword') Neues Passwort
			.col-sm-10
				input#inputPassword.form-control(type='password', name="newPassword", placeholder='Neues Passwort')
		.form-group.row
			.col-sm-10
				button.btn.btn-success(type='submit', style='margin-right:5px;') Ändern
				a.btn.btn-danger(role='button', href='/admin') Abbrechen


